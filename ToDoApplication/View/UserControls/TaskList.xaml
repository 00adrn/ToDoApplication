<UserControl x:Class="ToDoApplication.View.UserControls.TaskList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoApplication.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="*">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Name="TBlockTaskName" Text="TaskName" Margin="5" FontSize="14"/>
        </Grid>
        <Grid Grid.Row="1">
            <TextBlock Name="TBlockTaskDesc" Text="TaskDesc" Margin="5" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Name="TBlockTaskDate" Text="TaskDate" Margin="5" FontSize="12"/>
        </Grid>
    </Grid>
</UserControl>
