<UserControl x:Class="ToDoApplication.View.UserControls.TaskCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoApplication.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="*" d:DesignWidth="300">
     <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                
                <!-- Task Name Entry Area -->
                <Border Grid.Row="0" Grid.Column="0"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Name="tblockTaskName"
                                   Foreground="LightGray"
                                   Text="Task: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <TextBox Grid.Column="1"
                                 Name="TBoxEnterTaskName"
                                 Tag="Enter Task Name"
                                 Text="Enter Task Name"
                                 VerticalAlignment="Center"
                                 Foreground="Gray"
                                 Background="White"
                                 Margin="3,6,3,6"
                                 Height="Auto"
                                 LostFocus="TextBox_LostFocus"
                                 GotFocus="TextBox_GainFocus"/>
                    </Grid>
                </Border>
                
                <!-- Task Date Entry Area -->
                <Border Grid.Row="1" Grid.Column="0"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Name="tblockTaskDate"
                                   Foreground="LightGray"
                                   Text="Date: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <DatePicker Grid.Row="0" Grid.Column="1"
                                   Name="DBoxDate"
                                   Foreground="Gray"
                                   Margin="3,6,3,6"
                                   VerticalAlignment="Center"
                                   Background="White"
                                   BorderBrush="DarkGray"
                                   Height="Auto"
                                   SelectedDateChanged="DatePicker_SelectedDateChanged"/>
                    </Grid>
                </Border>
                
                <!-- Task Description entry Area -->
                <Border Grid.Row="2"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Foreground="LightGray"
                                   Text="Description: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Name="TBoxDescription"
                                 Tag= "Enter Description Here..."
                                 Text= "Enter Description Here..."
                                 TextWrapping="Wrap"
                                 Foreground="Gray"
                                 Background="White"
                                 GotFocus="TextBox_GainFocus"
                                 LostFocus="TextBox_LostFocus"
                                 Height="Auto"
                                 Margin="3,6,3,6"/>
                    </Grid>
                </Border>
            </Grid>
</UserControl>
