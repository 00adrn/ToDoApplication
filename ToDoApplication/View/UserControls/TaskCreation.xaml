<UserControl x:Class="ToDoApplication.View.UserControls.TaskCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ToDoApplication.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="Auto" d:DesignWidth="300">
     <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>
                
                <!-- Task Name Entry Area -->
                <Border Grid.Row="0" Grid.Column="0"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Name="tblockTaskName"
                                   Foreground="LightGray"
                                   Text="Task: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <TextBox Grid.Column="1"
                                 Name="tboxEnterTaskName"
                                 Tag="Enter Task Name"
                                 Text="Enter Task Name"
                                 Foreground="Gray"
                                 Background="LightGray"
                                 Margin="3,6,3,6"
                                 LostFocus="TextBox_LostFocus"
                                 GotFocus="TextBox_GainFocus"/>
                    </Grid>
                </Border>
                
                <!-- Task Date Entry Area -->
                <Border Grid.Row="1" Grid.Column="0"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Name="tblockTaskDate"
                                   Foreground="LightGray"
                                   Text="Date: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                   Name="tboxDate"
                                   Tag="MM/DD/YYYY"
                                   Text="MM/DD/YYYY"
                                   Foreground="Gray"
                                   GotFocus="TextBox_GainFocus"
                                   LostFocus="TextBox_LostFocus"
                                   TextChanged="DateBox_Changed"
                                   Margin="3,6,3,6"
                                   Background="LightGray"/>
                    </Grid>
                </Border>
                
                <!-- Task Description entry Area -->
                <Border Grid.Row="2"
                        CornerRadius="4"
                        Background="#525559"
                        Margin="0,1,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="33*"/>
                            <ColumnDefinition Width="67*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Foreground="LightGray"
                                   Text="Description: "
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Arial Bold"
                                   FontWeight="Bold"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Name="tboxDescription"
                                 Tag= "Enter Description Here..."
                                 Text= "Enter Description Here..."
                                 TextWrapping="Wrap"
                                 Foreground="Gray"
                                 Background="LightGray"
                                 GotFocus="TextBox_GainFocus"
                                 LostFocus="TextBox_LostFocus"
                                 Height="60"
                                 Margin="3,6,3,6"/>
                    </Grid>
                </Border>
            </Grid>
</UserControl>
