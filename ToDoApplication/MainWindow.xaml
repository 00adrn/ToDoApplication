<Window x:Class="ToDoApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApplication"
        xmlns:userControls="clr-namespace:ToDoApplication.View.UserControls"
        mc:Ignorable="d"
        Title="Adrian's To Do List Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!-- TITLE AREA -->
        <Border Grid.Row="0" Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="0,1, 1,1">
            <Grid >
                <TextBlock Name="TBlockNewItem"
                           Text="New Task"
                           FontSize="13"
                           FontFamily="Arial"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="0,1, 0,1">
            <Grid >
                <TextBlock Name="TBlockCurrentList"
                           Text="Incomplete Tasks"
                           FontSize="13"
                           FontFamily="Arial"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- TASK CREATION AREA -->
        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"
                BorderBrush="Black"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <userControls:TaskCreation Grid.Row="0" 
                                               x:Name="TaskMake"/>
                    <Button Grid.Row="1"  
                            Margin="60, 10,60,10"
                            Content="Create"
                            Click="btn_CreateTask"/>
                </Grid>
        </Border>
        <!-- TASK LIST AREA -->
        <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
              Name="GridTaskList">
            <ScrollViewer>
                <StackPanel x:Name="SPTasks"
                            Margin="10">
                </StackPanel>
            </ScrollViewer>
        </Grid> 
        
        <Grid Grid.Row="2" Grid.Column="0">
            
        </Grid>
        
    </Grid>
</Window>
